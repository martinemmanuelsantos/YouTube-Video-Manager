<Page x:Class="YouTube_Video_Manager.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YouTube_Video_Manager.Pages"
      xmlns:controls="clr-namespace:YouTube_Video_Manager.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="LoginPage"
      Loaded="LoginPage_Load">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="LoadingLabel" Grid.Row="1" FontSize="48" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center">
            Logging in...
        </TextBlock>
        <controls:LoadingSpinner Grid.Row="2"/>
    </Grid>
    
</Page>
